@{
    ViewData["Title"] = "Создать склад";
}
<div class="text-center">
    <h2 class="display-4">Создание склада</h2>
</div>
<form method="post" asp-action="CreateAction">
    <div class="row">
        <div class="col-4">Название:</div>
        <div class="col-8"><input type="text" name="storeName" /></div>
    </div>
    <div class="row">
        <div class="col-4">Ответственный:</div>
        <div class="col-8">
            <input type="text" name="fullNameResponsible" />
        </div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Создать" class="btn btnprimary" /></div>
    </div>
</form>