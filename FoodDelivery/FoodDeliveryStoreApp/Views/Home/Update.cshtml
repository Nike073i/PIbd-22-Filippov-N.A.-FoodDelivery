@model FoodDeliveryBusinnesLogic.ViewModels.StoreViewModel
@{
    ViewData["Title"] = "Изменить склад";
}
<div class="text-center">
    <h2 class="display-4">Изменение склада</h2>
</div>
<form method="post" asp-action="UpdateAction">
    <input type="hidden" name="store" value="@Model.Id" />
    <div class="row">
        <div class="col-4">Название:</div>
        <div class="col-4"><input type="text" name="storeName" value="@Model.StoreName" /></div>
    </div>
    <div class="row">
        <div class="col-4">Ответственный:</div>
        <div class="col-8"><input type="text" name="fullNameResponsible" value="@Model.FullNameResponsible" /></div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Изменить" class="btn btnprimary" /></div>
    </div>
    <div class="col-8">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Блюдо
                    </th>
                    <th>
                        Количество
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StoreDishes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Value.Item1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Value.Item2)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>