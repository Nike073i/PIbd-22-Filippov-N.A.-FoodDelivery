@{
    ViewData["Title"] = "Удалить склад";
}
<div class="text-center">
    <h2 class="display-4">Удаление склада</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Склад:</div>
        <div class="col-8">
            <select id="store" name="store" class="form-control" asp-items="@(new SelectList(@ViewBag.Stores,"Id", "StoreName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Удалить" class="btn btnprimary" /></div>
    </div>
</form>